extends ../layout

block content
  .container
    h1.page-header 설문 작성
    form(action='/surveys', method='POST')
      .form-group
        label(for='title') 제목
        input.form-control(name='title')
      .form-group
        label(for='content') 내용
        textarea.form-control(name='content')
      div.form-actions
        a.btn.btn-default(href='javascript:window.history.back();') 뒤로 
        | &nbsp;
        button.btn.btn-primary(type='submit') 설문 작성
