extends ../layout
  
block content
  .container
    h1= survey.title
    h5= survey.createdAt 
    h3
    .well= survey.content
    br
    br

    h3 질문 목록 (#{survey.numComment})
    table.table
      tr
        th 유형
        th 질문
        th 관리
      each question in questions
        tr
          td= question.type
          td= question.content
          td
            a.btn.btn-xs.btn-default(href='/surveys/#{question._id}/edit') 수정
            | 
            a.btn.btn-xs.btn-default(href='/surveys/question/#{question._id}?_method=DELETE') 삭제
    
    h3 주관식 질문 추가
    form.form-inline(action='/surveys/' + survey._id + '/questions', method='POST')
      .form-group
        label.sr-only(for='content') content
        input.form-control(name='content', size=50, placeholder='Question details')
        input.form-control(name='type', type='hidden', value='주관식')
      button.btn.btn-info 질문저장

    br
    br
    a.btn.btn-default(href='/surveys/') 목록
